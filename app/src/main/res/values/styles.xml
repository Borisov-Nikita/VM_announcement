<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="material_card_view_style" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">#1976D2</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="material_card_view_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>